<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>servletDemo</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>myApp</servlet-name>
  	<servlet-class>com.servletDemo.AddServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>myApp</servlet-name>
  	<url-pattern>/addNumber/add</url-pattern>
  </servlet-mapping>
  
   <servlet>
  	<servlet-name>square</servlet-name>
  	<servlet-class>com.servletDemo.SquareServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>square</servlet-name>
  	<url-pattern>/addNumber/calculateSquare</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>myAppRedirect</servlet-name>
  	<servlet-class>com.servletDemo.SendRedirectAddServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>myAppRedirect</servlet-name>
  	<url-pattern>/addNumberRedirect/addRedirect</url-pattern>
  </servlet-mapping>
  
   <servlet>
  	<servlet-name>squareRedirect</servlet-name>
  	<servlet-class>com.servletDemo.SendRedirectSquareServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>squareRedirect</servlet-name>
  	<url-pattern>/addNumberRedirect/calculateSquareRedirect</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>identity</servlet-name>
  	<servlet-class>com.servletDemo.IdentityServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>identity</servlet-name>
  	<url-pattern>/reading-form-with-Servlets2/identity</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>displayId</servlet-name>
  	<servlet-class>com.servletDemo.DisplayIdServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>displayId</servlet-name>
  	<url-pattern>/reading-form-with-Servlets2/displayIdentity</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>configcontext</servlet-name>
  	<servlet-class>com.servletDemo.MyServletContextAndConfig</servlet-class>
  	<init-param>
  		<param-name>name</param-name>
  		<param-value>Terminator</param-value>
  	</init-param>
  </servlet>
  <servlet-mapping>
  	<servlet-name>configcontext</servlet-name>
  	<url-pattern>/servletcontextandservletconfig/index</url-pattern>
  </servlet-mapping>
  
  <context-param>
  	<param-name>name</param-name>
  	<param-value>John</param-value>
  </context-param>
  
  <context-param>
  	<param-name>phone</param-name>
  	<param-value>Samsung</param-value>
  </context-param>
  
  
  
  
  
</web-app>